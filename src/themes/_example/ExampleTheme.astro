---
import Theme from "../Theme.astro";

const name = "Example"; // This is the name that appears in the theme select menu
const id = "example"; // this is the internal id, it should be all lowercase and contain no spaces. You can use hyphens to separate words.
---

<Theme id={id} name={name} />

<script define:vars={{ id }}>
  const theme = document.getElementById(id);

  theme.onLoad = () => {
    // Add your theme scripting here
  };

  theme.onUnload = () => {
    // If your theme manipulates the DOM, revert your changes here
  };
</script>

<style id={`style-${id}`} is:global is:inline>
  /* Add Your CSS Styles Here */
</style>
